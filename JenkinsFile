pipeline {
  agent any
  environment {
    // >>> Remplace par le vrai chemin de ton python.exe <<<
    PY = 'C:\Users\ZAYNEB\AppData\Local\Python\bin\python.exe'
  }
  stages {
    stage('Test') {
      steps {
        bat '''
        @echo on
        "%PY%" --version
        "%PY%" -m pip install --upgrade pip
        "%PY%" -m pip install pytest
        "%PY%" -m pytest -q --junitxml=test-results.xml
        '''
      }
      post { always { junit 'test-results.xml' } }
    }
  }
}
